<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#333333"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context="com.rtoth.console.MainActivity">

    <ScrollView
            android:id="@+id/CONSOLE_SCROLL_VIEW"
            android:layout_alignParentTop="true"
            android:layout_width="fill_parent"
            android:layout_height="272dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:background="#050505"
            android:scrollbars="vertical">a

        <!--
        TODO: Change this to use something other than fontFamily to be
        compatible with android api < 16
         -->
        <TextView
                android:id="@+id/CONSOLE_BUFFER"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:fontFamily="monospace"
                android:textColor="#AAAAAA"/>

    </ScrollView>

    <!--
    TODO: Change this to use something other than fontFamily to be
    compatible with android api < 16
     -->
    <TextView
            android:id="@+id/PROMPT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/CONSOLE_SCROLL_VIEW"
            android:layout_marginTop="2dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="#050505"
            android:textColor="#AAAAAA"
            android:fontFamily="monospace"
            android:textSize="15sp"
            android:text="$"/>
    <EditText
            android:id="@+id/CONSOLE_INPUT"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/CONSOLE_SCROLL_VIEW"
            android:layout_toRightOf="@id/PROMPT"
            android:layout_marginTop="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="#050505"
            android:textColor="#AAAAAA"
            android:fontFamily="monospace"
            android:textSize="15sp"
            android:inputType="text"
            android:imeOptions="actionSend" />

    <!-- Invisible center strut to help center the buttons -->
    <View android:id="@+id/CENTER_STRUT"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_below="@id/CONSOLE_INPUT"
          android:layout_centerHorizontal="true"/>

    <Button
            android:id="@+id/JUMP_TO_TOP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/CONSOLE_INPUT"
            android:layout_alignRight="@id/CENTER_STRUT"
            android:layout_alignParentLeft="true"
            android:text="Jump to Top"
            android:onClick="jumpToTop"/>
    <Button
            android:id="@+id/JUMP_TO_BOTTOM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/CONSOLE_INPUT"
            android:layout_alignLeft="@id/CENTER_STRUT"
            android:layout_alignParentRight="true"
            android:text="Jump to Bottom"
            android:onClick="jumpToBottom"/>


</RelativeLayout>
